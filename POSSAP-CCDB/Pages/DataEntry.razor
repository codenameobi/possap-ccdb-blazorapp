<section class="main">
    <div class="row">
        <div class="col-12">
            <div class="data-entries-header">
                <h3>JOHN DOE's List of Entries</h3>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="nav d-flex justify-content-between navContent nav">
                <div class="nav-item active">
                    <a class="nav-link" href="#">All Entries (1)</a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" href="#">Queried Entries (0)</a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" href="#">Approved Entries (0)</a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" href="#">Incomplete Entries (1)</a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" href="#">Pending Entries </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" href="#">Queried Entries (0)</a>
                </div>
            </div>

        </div>
    </div>

    <div class="data-entries-content row">
        <div class="col-6">
            <h3 class="data_entries_content_text"> Show</h3>
        </div>
        <div class="col-6">
            <input type="text" />
            <!-- <input type="text" class="form-control" @bind="@courtofconviction" @oninput="SearchCourtOfConviction">-->
            <select>
                <!-- @foreach (var item in searchResults)
                {
                    <option value=""@item>@item</option>
                } -->
            </select>
        </div>
        <div class="col-12">
            <h3 class="data_entries_content_text"> Entries</h3>
        </div>
    </div>
    <div class="data-entries-action row">
        <div class="col-6">
            <button>
                <span>
                    Export to
                    CSV
                </span>
            </button>
        </div>
        <div class="col-6">
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </div>
    <div class="data-entries-table">
        <table class="table table-striped table-hover table-bordered">
            <thead class="bg-primary">
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Convict ID</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Age</th>
